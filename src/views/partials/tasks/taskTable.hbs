{{#if task}}

<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Operations</th>
        </tr>

    </thead>

    <tbody>
        
    {{#each task}}

    <tr>
        <td>{{@index}} </td>
        <td>{{tittle}} </td>
        <td>{{description}} </td>
        <td>
            {{#if done}}
                <a href="/tasks/{{_id}}/toggleDone " class="btn btn-dark">Undone</a>
            {{else}}
                <a href="/tasks/{{_id}}/toggleDone  " class="btn btn-success">Done</a>
            {{/if}}

            <a href="/tasks/{{_id}}/delete " class="btn btn-danger">Delete</a>
            <a href="/tasks/{{_id}}/edit " class="btn btn-info">Update</a>
        </td>
    </tr>

    

    {{/each}}

    </tbody>

</table>

{{else}}
            <div class="h-100 d-flex align-items-center justify-content-center">
                <div class="text-center text-white">
            <h1>NO TASKS</h1>
            <img src="/icons/lista-de-quehaceres.png" >
        </div>

            </div>


{{/if}}
  